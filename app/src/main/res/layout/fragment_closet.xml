<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/closetFragment"
    tools:context=".ui.closet.ClosetFragment">
    <RelativeLayout
        android:id="@+id/mainClosetScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab"
            app:tabTextColor="@color/fifth"
            app:tabTextAppearance="@style/AppTheme.FreqTabLayoutText"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager1"
            android:layout_below="@id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"/>
        <LinearLayout
            android:layout_below="@id/viewPager1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clothes_title"
                android:text="Oatmeal Cardigan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_per_wear"
                android:text="$10.00 / wear"/>

            <ListView
                android:id="@+id/clothingDetailsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                <!-- TODO Need to implement remove Button -->
<!--            <Button-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Remove Item"/>-->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/icon_plus"
                android:contentDescription="@string/closet_fragment_key"
                android:layout_margin="16dp"
                />
        </LinearLayout>

    </RelativeLayout>
    <ViewStub
        android:id="@+id/noInventoryScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/inflatedview"
        android:layout="@layout/fragment_no_inventory_screen"/>
</androidx.constraintlayout.widget.ConstraintLayout>